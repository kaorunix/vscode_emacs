// Emacs keybindings
{
    "key": "ctrl+a",
    "command": "cursorHome",
    "when": "textInputFocus"
},
{
    "key": "ctrl+e",
    "command": "cursorEnd",
    "when": "textInputFocus"
},
{
    "key": "ctrl+f",
    "command": "cursorRight",
    "when": "textInputFocus"
},
{
    "key": "ctrl+b",
    "command": "cursorLeft",
    "when": "textInputFocus"
},
{
    "key": "ctrl+n",
    "command": "cursorDown",
    "when": "textInputFocus"
},
{
    "key": "ctrl+p",
    "command": "cursorUp",
    "when": "textInputFocus"
},
{
    "key": "ctrl+k",
    "command": "editor.action.clipboardCutAction",
    "when": "textInputFocus"
},
{
    "key": "ctrl+y",
    "command": "editor.action.clipboardPasteAction",
    "when": "textInputFocus"
},
{
    "key": "ctrl+w",
    "command": "editor.action.deleteWordLeft",
    "when": "textInputFocus"
},
{
    "key": "ctrl+d",
    "command": "deleteRight",
    "when": "textInputFocus"
},
{
    "key": "ctrl+h",
    "command": "deleteLeft",
    "when": "textInputFocus"
},
{
    "key": "ctrl+g",
    "command": "cancelSelection",
    "when": "editorHasSelection"
},
{
    "key": "alt+w",
    "command": "editor.action.clipboardCopyAction",
    "when": "textInputFocus"
},
{
    "key": "ctrl+s",
    "command": "actions.find",
    "when": "!editorFocus"
},
{
    "key": "ctrl+s",
    "command": "editor.action.startFindReplaceAction",
    "when": "editorFocus"
},
{
    "key": "ctrl+/",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
},
// Emacs keybindings with incremental search
{
  "key": "ctrl+s",
  "command": "editor.action.startFindReplaceAction",
  "args": {
    "replace": false,
    "searchString": "",
    "isRegex": false,
    "matchCase": false,
    "preserveCase": false,
    "wordWrap": false,
    "cursorMoveOnMatch": false,
    "seedSearchStringFromSelection": false,
    "searchScope": "line",
    "triggerSearchEditorContext": true,
    "isSmartCase": true,
    "searchOnType": true,
    "incremental": true,
    "autoFindInSelection": false
  }
},
{
  "key": "ctrl+r",
  "command": "editor.action.startFindReplaceAction",
  "args": {
    "replace": false,
    "searchString": "",
    "isRegex": false,
    "matchCase": false,
    "preserveCase": false,
    "wordWrap": false,
    "cursorMoveOnMatch": false,
    "seedSearchStringFromSelection": false,
    "searchScope": "line",
    "triggerSearchEditorContext": true,
    "isSmartCase": true,
    "searchOnType": true,
    "incremental": true,
    "autoFindInSelection": false,
    "focusReplaceInput": true
  }
},
{
    "key": "ctrl+g",
    "command": "cancelSelection",
    "when": "editorHasSelection && findInputFocussed"
},
{
    "key": "enter",
    "command": "acceptSelectedSuggestion",
    "when": "suggestWidgetVisible && suggestWidgetMultipleSuggestions && textInputFocus"
},
// Emacs keybindings with selection
{
    "key": "ctrl+2",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorTextFocus"
},
{
    "key": "ctrl+w",
    "command": "editor.action.clipboardCopyAction",
    "when": "editorTextFocus"
},
{
    "key": "ctrl+y",
    "command": "editor.action.clipboardPasteAction",
    "when": "editorTextFocus"
},
{
    "key": "ctrl+x",
    "command": "-editor.action.cut",
    "when": "editorTextFocus"
},
{
    "key": "ctrl+x h",
    "command": "editor.action.selectToBracket",
    "when": "editorTextFocus"
}

